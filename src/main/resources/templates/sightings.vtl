<div class="col-md-6">
  <h3> Report Animal Sighting </h3>
  <form action="/new-sighting" method="post">
    <div class="input-group">
      <div class="form-control">
        #if($animals.size() >= 0)
          <label>Select Animal</label>
          <select name="animal_id">
            #foreach($animal in $animals)
              <option value="$animal.getId()">$animal.getName()</option>
            #end
          </select>
      </div>
      <div class="form-control">
        <label>Location</label>
        <select name="location_id">
          #foreach($location in $locations)
            <option value="$location.getId()">$location.getName()</option>
          #end
        </select>
      </div>

      <div class="form-control">
        <label>Ranger</label>
        <select name="ranger_id">
          #foreach($ranger in $rangers)
            <option value="$ranger.getId()">$ranger.getName()</option>
          #end
        </select>
      </div>
        <button class="btn" type="submit">Submit Report</button>
      #end
    </div>
  </form>
</div>
